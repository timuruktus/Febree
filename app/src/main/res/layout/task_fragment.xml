<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstBlockTasksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/first_step_text"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/firstBlockTasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step11"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step11Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step11"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step12"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step12Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step12"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step13"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step13Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step13"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step14"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step14Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step14"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step15"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="50dp"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step15Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step15"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/secondBlockTasksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/second_step_text"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/secondBlockTasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step21"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step21Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step21"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step22"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step22Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step22"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step23"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step23Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/step23"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step24"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step24Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/step24"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/step25"
                                android:layout_width="@dimen/task_edge_size"
                                android:layout_height="@dimen/task_edge_size"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@color/test_task_background" />

                            <TextView
                                android:id="@+id/step25Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/step25"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </ScrollView>

</RelativeLayout>